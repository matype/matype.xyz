---
export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title ? `${title} - matype` : "matype"}</title>
    <meta name="description" content="Masaaki Morishita's website" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body
    class="min-h-screen bg-white text-slate-900 dark:bg-neutral-800 dark:text-neutral-100"
  >
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "0xPropo";
    src: url(/0xPropo-VariableVF.woff2);
    font-display: block;
  }

  body {
    font-family: "0xPropo", system-ui, sans-serif;
    font-size: 16px;
  }
</style>
